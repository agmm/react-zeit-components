{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist/**/*"]
}
